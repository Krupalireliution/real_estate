<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_Properties_Offers_tree" model="ir.ui.view">
        <field name="name">properties.offers.tree</field>
        <field name="model">properties.offers</field>
        <field name="arch" type="xml">
            <tree string="Properties Offers">
                <field name="price" string="Price"/>
                <field name="status" string="Status"/>
                <field name="validity" string="Validity"/>
                <field name="date_deadline" string="Date Deadline"/>
            </tree>
        </field>
    </record>

    <record id="view_Properties_Offers_form" model="ir.ui.view">
            <field name="name">properties.offers.form</field>
            <field name="model">properties.offers</field>
            <field name="arch" type="xml">
                <form string="Properties Offers">
                    <sheet>
                        <group>
                                <field name="price" string="Price"/>
                                <field name="status" string="Status"/>
                                <field name="validity" string="Validity"/>
                                <field name="date_deadline" string="Date Deadline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>